{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CultOfPartiality Keyboard",
            "type": "shell",
            "command": "qmk compile -kb ${input:selectKeyboard} -km cultofpartiality",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "inputs": [
        {
          "id": "selectKeyboard",
          "type": "pickString",
          "description": "Which keyboard to build?",
          "options": [
            //{"label": "All", "value": "" },
            "redox_w",
            "planck/rev6",
            "psuedo_planck/rev6_drop",
            "bored/rev2",
            "preonic/rev3_drop"
          ]
        }
      ]
}
